{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "cunqa_config_file",
    "title": "CunqaConfigFile",
    "description": "Json schema to specify the characteristics of each deployed QPU",
    "type": "object",
    "properties": 
    {
        "backend": 
        {
            "description": "Physical properties of the QPU",
            "type": "object",
            "properties": 
            {
                "name": 
                {
                    "description":"Name of the QPU backend",
                    "type":"string",
                    "default": "DefaultBackend"
                },
                "version":
                {
                    "description":"Specific version of the QPU backend",
                    "type":"string",
                    "default": "0.0.0"
                },
                "description":
                {
                    "description":"Description of the QPU backend",
                    "type":"string",
                    "default": "Default backend"
                },
                "url":
                {
                    "description":"Url",
                    "type":"string",
                    "default":""
                },
                "n_qubits":
                {
                    "description":"Number of qubits of the QPU",
                    "type":"integer",
                    "default": 15
                },
                "is_simulator":
                {
                    "description":"",
                    "type":"boolean",
                    "default": true
                },
                "conditional":
                {
                    "description":"",
                    "type":"boolean",
                    "default": true
                },
                "memory":
                {
                    "description":"",
                    "type":"boolean",
                    "default": true
                },
                "max_shots":
                {
                    "description":"Maximum allowed shots",
                    "type":"integer",
                    "default": 1000000
                },
                "coupling_map":
                {   
                    "description":"Topology of the QPU's qubits",
                    "type":"array",
                    "items":
                    {
                        "type":"array",
                        "items":
                        {
                            "type":"integer"
                        }
                    }
                },
                "basis_gates":
                {
                    "description":"List of native gates admited by the QPU",
                    "type":"array",
                    "items":
                    {
                        "type": "string"
                    }
                },
                "custom_instructions":
                {
                    "description":"",
                    "type":"string"
                },
                "gates":
                {
                    "description":"",
                    "type":"array",
                    "items":
                    {
                        "type": "string"
                    }
                }
            }
        }
    },

    "required": ["backend"]
}
